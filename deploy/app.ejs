runtime: nodejs12
service: cms

instance_class: F1
automatic_scaling:
  target_cpu_utilization: .9
  target_throughput_utilization: .9
  max_instances: 2
  min_instances: 1
  max_concurrent_requests: 40
  max_pending_latency: 10s
  min_pending_latency: 6s

handlers:
- url: /.*
  script: auto
  secure: always
  redirect_http_response_code: 301

env_variables:
  MYSQL_USER: <%- DB_USER %>
  MYSQL_PASSWORD: <%- DB_PORT %>
  MYSQL_DATABASE: <%- DB_NAME %>
  INSTANCE_CONNECTION_NAME: <%- DB_INSTANCE_CONNECTION %>
