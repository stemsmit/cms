{
    "url": "<%- APP_URL %>",
    "server": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "database": {
      "client": "<%- DB_CLIENT %>",
      "connection": {
        "socketPath": "/cloudsql/<%- DB_INSTANCE_CONNECTION %>",
        "port": "<%- DB_PORT %>",
        "user": "<%- DB_USER %>",
        "password": "<%- DB_PASSWORD %>",
        "database": "<%- DB_NAME %>"
      }
    },
    "mail": {
      "transport": "SMTP",
      "options": {
          "service": "Mailgun",
          "host": "smtp.mailgun.org",
          "port": 465,
          "secureConnection": true,
          "auth": {
              "user": "<%- MAIL_USER %>",
              "pass": "<%- MAIL_PASSWORD %>"
          }
      }
    },
    "logging": {
        "level": "error",
        "rotation": {
            "enabled": true
        },
        "transports": []
    },
    "process": "systemd",
    "paths": {
      "contentPath": "content/"
    },
    "storage": {
        "active": "gcs",
        "gcs": {
            "keyFilename": "credentials.json",
            "bucket": "<%- GCS_BUCKET %>"
        }
    }
}
