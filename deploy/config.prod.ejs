{
    "url": "<%- APP_URL %>",
    "server": {
      "port": <%- PORT %>,
      "host": "0.0.0.0"
    },
    "database": {
      "client": "<%- DB_CLIENT %>",
      "connection": {
        "host": "<%- DB_HOST %>",
        "port": "<%- DB_PORT %>",
        "user": "<%- DB_USER %>",
        "password": "<%- DB_PASSWORD %>",
        "database": "<%- DB_NAME %>"
      }
    },
    "mail": {
      "transport": "Direct"
    },
    "logging": {
      "transports": [
        "file",
        "stdout"
      ]
    },
    "paths": {
      "contentPath": "/var/lib/ghost/content"
    },
    "storage": {
        "active": "ghost-gcs",
        "ghost-gcs": {
            "key": "credentials.json",
            "bucket": "<%- GCS_BUCKET %>"
        }
    }
}
